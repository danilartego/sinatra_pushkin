%h3 Записатьcя
%p На этой странице вы сможете к нам записаться
%hr

%form{action:"/visit", method:"POST"}
  .mb-3
    %label.form-label Ваше имя
    %input.form-control{type: "text", placeholder: "Введите ваше имя в этом окне", name:"username", value: "#{params[:username]}"}
  
  .mb-3
    %label.form-label Ваш телефон
    %input.form-control{type: "text", placeholder: "Введите ваш телефон в этом окне", name:"phone", value: "#{params[:phone]}"}
  
  .mb-3
    %label.form-label Когда вас ждать?
    %input.form-control{type: "text", placeholder: "Введите время приема в этом окне", name:"time", value: "#{params[:time]}"}
  
  .mb-3
    %label.form-label Выберите парикмахера
    %select.form-control{name: "barber"}
      %option Откройте это меню выбора парикмахера
      %option Барбер Максим
      %option Барбер Денис
      %option Барбер Александр
  .mb-3
    %label.form-label Выберите цвет краски
    %select#color.form-control{name: "color"}
      %option{:value => "#7bd148"} Green
      %option{:value => "#5484ed"} Bold blue
      %option{:value => "#a4bdfc"} Blue
      %option{:value => "#46d6db"} Turquoise
      %option{:value => "#7ae7bf"} Light green
      %option{:value => "#51b749"} Bold green
      %option{:value => "#fbd75b"} Yellow
      %option{:value => "#ffb878"} Orange
      %option{:value => "#ff887c"} Red
      %option{:value => "#dc2127"} Bold red
      %option{:value => "#dbadff"} Purple
      %option{:value => "#e1e1e1"} Gray

  %button.btn.btn-primary{:type => "submit"} Записаться

